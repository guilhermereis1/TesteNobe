<p id="notice"><%= notice %></p>

<h1>Transações (<%= @transactions.count %>)</h1>

<table class="table">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Tipo</th>
      <th>Valor</th>
      <th>Taxa</th>
      <th>Data</th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |trx| %>
      <tr>
        <td><%= trx.name %></td>
        <%= trx_kind(trx) %>
        <td><%= real(trx.value) %></td>
        <td><%= trx.tax == 0.0 ? 'Sem Taxa' : real(trx.tax) %></td>
        <td><%= trx.created_at.to_s(:date_time_env_specific) %></td>
        <td>
          <%= link_to 'Ver', trx, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Transação', new_transaction_path, class: "btn btn-success" %>