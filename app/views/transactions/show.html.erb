<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    Tipo - <b><%= @transaction.kind == 'money_deposit' ? "Depósito" : "Saque" %></b>
  </div>
  <div class="card-body">
    <h5 class="card-title">Valor: <b><%= real(@transaction.value) %></b></h5>
    <h6 class="card-title">Taxa: <b><%= real(@transaction.tax) %></b></h6>
    <p class="card-text">Descrição: <b><%= @transaction.name %></b></p>
    <%= link_to 'Voltar', transactions_path, class: "btn btn-secondary" %>
  </div>
</div>