<div class="text-center">
  <h1>Extrato</h1>
  <%= form_tag dashboard_user_extract_index_path, local: true, method: :get do %>
   <div class="row">
    <div class="col-md-6">
      <label>De</label>
      <%= date_field_tag :date_start, "", class: "form-control" %>
    </div>

    <div class="col-md-6">
      <label>Até</label>
      <%= date_field_tag :date_end, "", class: "form-control" %>
    </div>

    <div class="col-md-12">
      <br>
      <%= submit_tag "Filtrar", class: "btn btn-success"%> | <%= link_to 'Limpar Filtros', dashboard_user_extract_index_path, class: "btn btn-secondary" %>
    </div>
   </div>
  <% end %>
</div>

<% if @trx.count > 0 then %>
  <table class="table">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Ações</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trx.each do |transaction| %>
        <tr>
          <td><%= transaction.name %></td>
          <td><%= transaction.kind == 'money_deposit' ? "Depósito" : "Saque" %></td>
          <td><%= real(transaction.value) %></td>
          <td>
            <%= link_to 'Ver', transaction, class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>