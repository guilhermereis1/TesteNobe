<div class="user_edit">
  <h2>Editar Minha Conta: <%= current_user.email %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :name %><br />
        <input type="text" class="form-control" value="<%= current_user.name %>" disabled>
      </div>

      <div class="col-md-6">
        <%= f.label :email %><br />
        <input type="text" class="form-control" value="<%= current_user.email %>" disabled>
      </div>

      <div class="col-md-12">
        <%= f.label :cpf_or_cnpj %><br />
        <input type="text" class="form-control" value="<%= current_user.cpf_or_cnpj %>" disabled>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="col-md-6">
        <%= f.label :password %> <i>(deixe em branco se não quiser mudar)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em>Minimo <%= @minimum_password_length %> Caracteres!</em>
        <% end %>
      </div>

      <div class="col-md-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(precisamos de sua senha atual para confirmar suas alterações)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Atualizar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <br>

  <%= button_to "Cancelar Minha Conta!", registration_path(resource_name), data: { confirm: "Tem certeza disso?" }, method: :delete, class: "btn btn-danger" %>
  <br>
  <br>
  <%= link_to "Voltar", :back, class: "btn btn-secondary"%>
</div>
